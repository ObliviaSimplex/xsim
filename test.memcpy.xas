.glob memcpy
.glob puts
.glob main

main:
        #std
        loadi  target, r0        
        loadi  goodbyestr, r1
        loadi  0x10, r2
        push   r1
        call puts
        pop r1
        push   r0    # DST
        push   r1    # SRC
        push   r2    # LEN
        call   memcpy
        pop    r2
        pop    r1
        pop    r0
        loadi  target, r0
        push   r0
        call   puts  # let's see if it worked
        pop    r0 
        ret

goodbyestr:
.literal "Goodbye, world!"

target:
.words 0x20